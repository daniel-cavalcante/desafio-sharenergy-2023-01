{
  "compilerOptions": {
    "target": "ES2015",
    "moduleResolution": "node",
    "module": "commonjs",

    "outDir": "dist",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "removeComments": true,
    "noImplicitReturns": true,

    "baseUrl": ".",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },

  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "./node_modules/*",
    "dist"
  ]
}
